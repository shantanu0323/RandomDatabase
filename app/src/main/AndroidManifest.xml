<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shaan.randomdatabase">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="com.shaan.randomdatabase.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Modules.SignUpModule">
            <intent-filter>
                <action android:name="com.shaan.randomdatabase.Modules.SignUpModule" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Modules.LoginModule">
            <intent-filter>
                <action android:name="com.shaan.randomdatabase.Modules.LoginModule" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Modules.UpdateModule">
            <intent-filter>
                <action android:name="com.shaan.randomdatabase.Modules.UpdateModule" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Modules.DeleteModule">
            <intent-filter>
                <action android:name="com.shaan.randomdatabase.Modules.DeleteModule" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Modules.PostLogin">
            <intent-filter>
                <action android:name="com.shaan.randomdatabase.Modules.PostLogin" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Modules.ShowModule">
            <intent-filter>
                <action android:name="com.shaan.randomdatabase.Modules.ShowModule" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Modules.ClearDatabase">
            <intent-filter>
                <action android:name="com.shaan.randomdatabase.Modules.ClearDatabase" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>